@*@using Web.DreamHome.Models*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | DreamHome</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="icon" href="@Url.Content("~/img/favicon.ico")" type="image/x-icon">
    <!-- Inicio Estilos -->
    @Styles.Render("~/Content/PlantillaPrincipalParte1Css")
    @Styles.Render("~/Content/PlantillaPrincipalParte2Css")
    @RenderSection("styles", required: false)
    <!-- Fin Estilos -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
        .pagination > .active > a, .pagination > .active > a:focus, .pagination > .active > a:hover, .pagination > .active > span, .pagination > .active > span:focus, .pagination > .active > span:hover {
            background-color: #3c8dbc;
            border-color: blue;
        }
    </style>
</head>
<body class="hold-transition skin-green sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home", new { Area = "" })" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>DH</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>DREAMHOME</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/img/User.png" class="img-circle" height="22" width="22" />
                                <span class="hidden-xs">EST. ALDEDIER MARTINEZ</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/img/User.png" class="img-circle">
                                    <p>
                                        EST. ALDEDIER MARTINEZ
                                        <small>Universidad del Tolima</small>
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <form target="_blank" action="@Url.Action("Perfil", "Account", new { Area = "" })">
                                            <button type="submit" class="btn btn-primary btn-flat">
                                                <span></span> Perfil
                                            </button>
                                        </form>
                                    </div>
                                    <div class="pull-right">
                                        <a class="btn btn-primary btn-flat" href="@Url.Action("LogOff", "Account", new { Area = "" })">Cerrar sesión</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/img/User.png" class="img-circle">
                    </div>
                    <div class="pull-left info">
                        <h6>EST. ALDEDIER</h6>
                        <h6>MARTINEZ</h6>
                    </div>
                </div>
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">Menú</li>
                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>Inicio</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index", "Home", new { Area = "" })"><i class="fa fa-circle-o"></i> Principal</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-pie-chart"></i>
                            <span>Administración</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("", "")"><i class="fa fa-user-plus"></i> Gestión Usuarios</a></li>
                            <li><a href="@Url.Action("", "")"><i class="fa fa-street-view"></i> Lista Usuarios</a></li>
                            <li><a href="@Url.Action("", "")"><i class="fa fa-pencil-square-o"></i> Lista Sucursales</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-cab"></i>
                            <span>Inmuebles</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("", "")"><i class="fa fa-pencil"></i> Registros</a></li>
                            <li><a href="@Url.Action("", "")"><i class="fa fa-user"></i> Arrendatarios</a></li>
                            <li><a href="@Url.Action("", "")"><i class="fa fa-child"></i> Empleados</a></li>
                            <li><a href="@Url.Action("", "")"><i class="fa fa-search"></i> Consulta</a></li>
                            <li><a href="@Url.Action("", "")"><i class="fa fa-newspaper-o"></i> Noticias</a></li>
                        </ul>
                    </li>

                </ul>

            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1
            </div>
            <p><strong>&copy; @DateTime.Now.Year <a href="">UT</a></strong>&nbsp;"Universidad del Tolima"</p>
        </footer>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">

            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Home tab content -->
                <div class="tab-pane" id="control-sidebar-home-tab">
                    <h3 class="control-sidebar-heading">Mis Estilos</h3>
                </div>
            </div>
        </aside>
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- Inicio Script -->
    @Scripts.Render("~/bundles/PlantillaPrincipalJs")
    <!-- Fin Script -->
    @RenderSection("scripts", required: false)

    <!-- Script para activar en cualquier parte del formulario la modal de carga -->
    <script src="~/Scripts/Cargando.js"></script>
    <script type="text/javascript">
        function Cargando() {
            waitingDialog.show("Cargando...");
        };

        //Ruta para redireccionar y cerrar sesión
        var redireccionarLogin = "@Url.Action("Login", "Account", new { area = ""})" + "?returnUrl=";
    </script>

    <script src="~/Scripts/CierreProgramadoSesion.js"></script>

</body>
</html>