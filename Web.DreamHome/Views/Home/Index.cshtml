@{
    ViewBag.Title = "Inicio";
}

@section styles{
    @Styles.Render("~/Content/FormularioCss")
    @Styles.Render("~/Content/bootstrapdataTablesCSS")
<style>
    .responsivo {
        max-width: 100%;
        height: auto;
    }
</style>
}

@section scripts{
    @Scripts.Render("~/bundles/FormularioJs")
    @Scripts.Render("~/bundles/jquerydataTablesJS")
}

<section class="content-header">

    <div>
        <h3 class="text text-center"><b>Bienvenid@@!!! al sistema de información de DreamHome</b></h3>
    </div>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home", new { Area = "" })"><i class="fa fa-home"></i> Portal</a></li>
        <li class="active">Inicio</li>
    </ol>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                            <li data-target="#carousel-example-generic" data-slide-to="3" class=""></li>
                            <li data-target="#carousel-example-generic" data-slide-to="4" class=""></li>
                            <li data-target="#carousel-example-generic" data-slide-to="5" class=""></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/img/portada.jpg" style="width:100%; height:300px;" />
                            </div>
                            <div class="item">
                                <img src="~/img/portada2.jpg" style="width:100%; height:300px;" />
                            </div>
                            <div class="item">
                                <img src="~/img/portada3.jpg" style="width:100%; height:300px;" />
                            </div>
                            <div class="item">
                                <img src="~/img/portada4.jpg" style="width:100%; height:300px;" />
                            </div>
                            <div class="item">
                                <img src="~/img/portada5.jpg" style="width:100%; height:300px;" />
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="fa fa-angle-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="fa fa-angle-right"></span>
                        </a>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

    <div class="row">

        <div class="col-md-4">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">1. Requisitos y descargas de programas y extensiones</h3>
                </div>
                <div class="box-body text text-center">
                    <video controls="controls" alt="No se encontró el video" class="responsivo">
                        <source src="/Video/Video1.mp4" type="video/mp4" />
                    </video>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">2. Instalación de Motor Oracle y SQL Developer</h3>
                </div>
                <div class="box-body text text-center">
                    <video controls="controls" alt="No se encontró el video" class="responsivo">
                        <source src="/Video/Video2.mp4" type="video/mp4" />
                    </video>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">3. Instalación Visual Studio y Extensión GIT Hub</h3>
                </div>
                <div class="box-body text text-center">
                    <video controls="controls" alt="No se encontró el video" class="responsivo">
                        <source src="/Video/Video3.mp4" type="video/mp4" />
                    </video>
                </div>
            </div>
        </div>
    </div>
</section>