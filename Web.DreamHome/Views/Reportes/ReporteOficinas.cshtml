@model Comun.DreamHome.HistorialLaboralDTO

@{
    ViewBag.Title = "Reporte";
}

@section styles{
    @Styles.Render("~/Content/FormularioCss")
    @Styles.Render("~/Content/bootstrapdataTablesCSS")
}

@section scripts{
    @Scripts.Render("~/bundles/FormularioJs")
    @Scripts.Render("~/bundles/jquerydataTablesJS")
    <script>
        poblarTabla("tbDatos");
    </script>
}


<section class="content-header">
    <h1>
        Reporte Empleados por oficina
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Inicio</a></li>
        <li class="active">Listar</li>
    </ol>
</section>

<section class="content">

    <div class="row">
        <div class="col-md-12" id="notificacion"></div>
    </div>

    @using (Html.BeginForm())
    {
        <!-- Datos básicos-->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <!-- /.box-header -->
                    <div class="box-header with-border">
                        <div class="text-right">
                            <div class="col-md-6 text-left">
                                <h3 class="box-title"><i class="fa fa-file-text-o"></i> Datos de búsqueda</h3>
                            </div>
                        </div>
                    </div>

                    <!-- /.box-body -->
                    <div class="box-body">
                        <div class="form-group-sm">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.Label("Oficina", htmlAttributes: new { @class = "control-label col-md-12" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.OFICINA, new { htmlAttributes = new { @class = "form-control", type = "text", @placeholder = "Digite el nombre de la oficina" } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-footer">
                        <div class="col-md-6 text-right">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <span class="fa fa-search"></span> Buscar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    <div class="row">
        <div class="col-md-12">
            <!-- /.box -->
            <div class="box box-primary">
                <div class="box-header">
                    <div class="text-right">
                        <div class="col-md-6 text-left">
                            <h3 class="box-title">Resultados</h3>
                        </div>
                    </div>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tbDatos" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>
                                    <p>Oficina</p>
                                </th>
                                <th>
                                    <p>Cargo</p>
                                </th>
                                <th>
                                    <p>Nombre</p>
                                </th>
                                <th>
                                    <p>Fecha</p>
                                </th>
                                <th>
                                    <p>Vigente</p>
                                </th>
                                <th>
                                    <p>Estado</p>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.REPORTE)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.OFICINA</td>
                                    <td>@item.CARGO</td>
                                    <td>@item.NOMBRE_RH</td>
                                    <td>@item.FECHA_HST</td>
                                    <td>@item.VIGENTE_HST</td>
                                    <td>@item.ESTADO_HST</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>


</section>